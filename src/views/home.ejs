<%- include ('partials/header') %>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">
                <table id="tableCliente"class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nunero</th>
                            <th>Nombre</th>
                            <th>Direccion</th>
                            <th>Cel</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(function(item) { %>
                            <tr>
                                <td> <%= item.id%></td>
                                <td> <%= item.nombre%></td>
                                <td> <%= item.direccion%></td>
                                <td> <%= item.phone%></td>
                                <td>
                                    <a href="/delete/<%= item.id %>" class="btn btn-danger btn-sm"> Eliminar</a> 
                                    <a href="/update/<%= item.id %> " class="btn btn-success btn-sm"> Editar</a> 
                                 </td>
                            </tr>                          
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <form action="/add" method="post">
                    <div class=" form-group mt-2">
                        <input type="text" name="nombre" placeholder="Ingrese el nombre" class="form-control" required>
                    </div>
                    <div class=" form-group mt-2">
                        <input type="text" name="direccion" placeholder="Ingrese la dirección" class="form-control">
                    </div>
                    <div class=" form-group mt-2">
                        <input type="text" name="phone" placeholder="Ingrese el número" class="form-control" onkeypress="if ( isNaN( String.fromCharCode(event.keyCode) )) return false;">
                    </div>
                   <div class=" col-md-12 text-center">
                       <button type="submit" class="btn btn-primary mt-3" >  Guardar </button>
                   </div>
                </form>
            </div>

        </div>

    </div>    
    <script>
        $(document).ready( function () {
      $('#tableCliente').DataTable();
      console.log('Hola');
  } );
  </script>
 
